{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "newLine": "LF",
        "pretty": true,
        "removeComments": true,
        "target": "es5",
        "typeRoots": [
            "/node_modules",
            "/common"
        ]
    }
}